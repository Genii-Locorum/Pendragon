            {{#if ../isLocked}}
              <div class="npc-name-display centre">{{stat.formula}}</div>
            {{else}}
              <div class="npc-name-input centre input-border"><input name="system.stats.{{key}}.formula" type="text" value="{{stat.formula}}"/></div>           
            {{/if}}
            <div></div>
          {{/each}} 
        </section>
        <br>
        <div class="stat-name bold">{{localize 'PEN.variableSkills'}}</div>

       <ol class="item-list" style="padding: 0px;">
        {{#unless hasRandoms}}
        <div>{{localize 'PEN.dropHere'}}</div>
        {{/unless}}
        {{#each randoms as |item key|}}
