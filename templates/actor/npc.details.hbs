            </div>      
          {{/unless}}  

          {{#isOr actor.system.talentExp unlocked}}  
            {{#each talents as |skill key|}}
              {{#if ../system.lock}}
              <div class="npc-name rollable skill-name truncate" data-tooltip="{{skill.name}}" data-itemid="{{skill._id}}">{{skill.name}}</div> 
              <div class="npc-name centre">{{skill.system.value}}</div>   
              <div></div>      
              {{else}}
                <div class="npc-name-input item truncate" data-tooltip="{{skill.name}}" data-field ="name" data-itemid="{{skill._id}}"><input class="inline-edit" name="item.skill.{{key}}.name" type="text" value="{{skill.name}}"/></div>
                <div class="npc-name-input centre item" data-field ="value" data-itemid="{{skill._id}}"><input class="inline-edit" name="item.system.skill.{{key}}.value" type="text" value="{{skill.system.value}}" data-dtype="Number"/></div>
                <div class="npc-name centre item" data-itemid ="{{skill._id}}" data-document-class='Item'>
                  <a class="item-control fade" data-action="viewDoc"><i title="{{localize 'PEN.view'}}" class="fa-solid fa-eye"></i></a>
                  <a class="item-control fade" data-action="deleteDoc"><i title="{{localize 'PEN.delete'}}" class="fa-solid fa-broom-wide"></i></a>
                </div>
              {{/if}}
            {{/each}}
          {{/isOr}}
        </section>
      {{/isAnd}}

      {{!--Horses Block --}}
      {{#isAnd noHorse system.lock}}
      {{else}}    
        <section class="npc-weapons-grid">
          <div class="npc-name bold grey" data-action="listExp" data-section="horseExp">{{ localize "PEN.horse" }}</div>  
          <div class="npc-name bold centre grey">{{ localize "PEN.hpShort" }}</div>    
          <div class="npc-name bold centre grey">{{ localize "PEN.damage" }}</div>
          {{#unless system.lock}}     
            <div class="npc-name bold centre grey" data-action="createDoc" data-document-class='Item' data-type="horse">  
              <a title="{{localize 'PEN.add'}}"><i class="item-control fas fa-plus"></i></a>
            </div>
          {{else}}
            <div class="centre grey" data-action="listExp" data-section="horseExp">  
              {{#if actor.system.horseExp}}
                  <a title="{{localize 'PEN.ChaosiumCanvasInterface.Actions.Hide'}}"><i class="black fas fa-angles-up"></i></a>
              {{else}}
                  <a title="{{localize 'PEN.ChaosiumCanvasInterface.Actions.Show'}}"><i class="black fas fa-angles-down"></i></a>
              {{/if}}
            </div>       
          {{/unless}}  
        
          {{#isOr actor.system.horseExp unlocked}}  
            {{#each horses as |horse key|}}
              {{#if ../system.lock}}
              <div class="npc-name truncate" data-tooltip="{{horse.name}}" data-type ="horse" data-sourceID = "{{horse.system.sourceID}}" data-itemid="{{horse._id}}">{{horse.name}}</div> 
              <div class="npc-name-input centre item" data-field ="hp" data-itemid="{{horse._id}}"><input class="inline-edit" name="item.system.horse.{{key}}.value" type="text" value="{{horse.system.hp}}" data-dtype="Number"/></div>
              <div class="npc-name centre rollable damage" title="{{localize 'PEN.chargeDmgHint'}}: {{horse.system.chargeDmg}}" data-itemid="{{horse._id}}">{{horse.system.damage}}</div>
              <div></div>      
              {{else}}
                <div class="npc-name-input item truncate" data-tooltip="{{horse.name}}" data-field ="name" data-itemid="{{horse._id}}"><input class="inline-edit" name="item.horse.{{key}}.name" type="text" value="{{horse.name}}"/></div>
                <div class="npc-name-input centre item" data-field ="hp" data-itemid="{{horse._id}}"><input class="inline-edit" name="item.system.horse.{{key}}.value" type="text" value="{{horse.system.hp}}" data-dtype="Number"/></div>
                <div class="npc-name-input centre item" data-field ="damage" data-itemid="{{horse._id}}"><input class="inline-edit" name="item.system.horse.{{key}}.damage" type="text" value="{{horse.system.damage}}"/></div>
                <div class="npc-name centre item" data-itemid ="{{horse._id}}" data-document-class='Item'>
                  <a class="item-control fade" data-action="viewDoc"><i title="{{localize 'PEN.view'}}" class="fa-solid fa-eye"></i></a>
                  <a class="item-control fade" data-action="deleteDoc"><i title="{{localize 'PEN.delete'}}" class="fa-solid fa-broom-wide"></i></a>
                </div>
              {{/if}}
            {{/each}}
          {{/isOr}}
        </section>      
      {{/isAnd}}  
    {{/if}}
  </section>
