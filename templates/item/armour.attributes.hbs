  <section class="tab attributes {{tab.cssClass}}" data-group="primary" data-tab="attributes">
    <div class="item-armour-grid">
      {{#if isGM}}
        <div class="stat-name left bold">{{localize 'PEN.armourPoints'}}</div>
        <div class="stat-name-input "><input name="system.ap" type="text" value="{{item.system.ap}}" data-dtype="Number"/></div>

        <div class="stat-name left bold">{{localize 'PEN.armour'}}</div>
        <div class=""><a class="item-control item-toggle large-icon" data-property = "armour" title="{{localize 'PEN.dblClickToggle'}}"><i class="{{#if item.system.type}}fa-regular fa-square-check{{else}}fa-regular fa-square{{/if}}"></i></a></div>
        <div class="stat-name left bold">{{localize 'PEN.shield'}}</div>
        <div class=""><a class="item-control item-toggle large-icon" data-property = "shield" title="{{localize 'PEN.dblClickToggle'}}"><i class="{{#if item.system.type}}fa-regular fa-square{{else}}fa-regular fa-square-check{{/if}}"></i></a></div>

        {{#if item.system.type}}
          <div class="stat-name left bold">{{localize 'PEN.material'}}</div>
          <div class="stat-name">
            <select data-handle-change name="system.material">
              {{selectOptions armourType selected=item.system.material}}
            </select>
          </div>
          <div class="stat-name left bold">{{localize 'PEN.padding'}}</div>
          <div class="stat-name-input {{#if (eq item.system.padding '')}} input-border {{/if}}"><input name="system.padding" type="text" value="{{item.system.padding}}"/></div>
        {{else}}
          <div class="stat-name left bold">{{localize 'PEN.missPenal'}}</div>
          <div class="stat-name-input {{#if (eq item.system.missPenalty '')}} input-border {{/if}}"><input name="system.missPenalty" type="text" value="{{item.system.missPenalty}}"/></div>
          <div class="stat-name left bold">{{localize 'PEN.disadvantage'}}</div>
          <div class="stat-name-input {{#if (eq item.system.disadvantage '')}} input-border {{/if}}"><input name="system.disadvantage" type="text" value="{{item.system.disadvantage}}"/></div>
        {{/if}}

      {{else}}
        <div class="stat-name left bold">{{localize 'PEN.armourPoints'}}</div>

        {{#if item.system.type}}
          <div class="stat-name">{{item.system.ap}}</div>
        {{else}}
          <div class="stat-name-input "><input name="system.ap" type="text" value="{{item.system.ap}}" data-dtype="Number"/></div>
        {{/if}}
        <div class="stat-name left bold">{{localize 'PEN.armour'}}</div>
        <div class=""><a class="item-control large-icon"><i class="{{#if item.system.type}}fa-regular fa-square-check{{else}}fa-regular fa-square{{/if}}"></i></a></div>
        <div class="stat-name left bold">{{localize 'PEN.shield'}}</div>
        <div class=""><a class="item-control large-icon"><i class="{{#if item.system.type}}fa-regular fa-square{{else}}fa-regular fa-square-check{{/if}}"></i></a></div>

        {{#if item.system.type}}
          <div class="stat-name left bold">{{localize 'PEN.material'}}</div>
          <div class="stat-name">{{armourLabel}}</div>
          <div class="stat-name left bold">{{localize 'PEN.padding'}}</div>
          <div class="stat-name">{{item.system.padding}}</div>
        {{else}}
          <div class="stat-name left bold">{{localize 'PEN.missPenal'}}</div>
          <div class="stat-name">{{item.system.missPenalty}}</div>
          <div class="stat-name left bold">{{localize 'PEN.disadvantage'}}</div>
          <div class="stat-name">{{item.system.disadvantage}}</div>
        {{/if}}


      {{/if}}

      <div class="stat-name left bold">{{localize 'PEN.notes'}}</div>
      <div class="stat-name-input {{#if (eq item.system.notes '')}} input-border {{/if}}"><input name="system.notes" type="text" value="{{item.system.notes}}"/></div>

    </div>
    {{#if hasOwner}}
      <br>
      <div class="item-armour-grid">
        <div class="stat-name left bold">{{localize 'PEN.equipped'}}</div>
        <div class=""><a class="item-control item-toggle large-icon" data-property = "equipped" title="{{localize 'PEN.dblClickToggle'}}"><i class="{{#if item.system.equipped}}fa-regular fa-square-check{{else}}fa-regular fa-square{{/if}}"></i></a></div>
        <div class="stat-name left bold" title="{{localize 'PEN.degradedHint'}}">{{localize 'PEN.degraded'}}</div>
        <div class=""><a class="item-control item-toggle large-icon" data-property = "poor" title="{{localize 'PEN.dblClickToggle'}}"><i class="{{#if item.system.poor}}fa-regular fa-square-check{{else}}fa-regular fa-square{{/if}}"></i></a></div>
      </div>
    {{/if}}
  </section>
