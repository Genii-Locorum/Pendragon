<section class="tab attributes {{tab.cssClass}}" data-group="primary" data-tab="attributes">

  <div class="item-trait-grid">
    <div class="stat-name left bold">{{localize 'PEN.oppName'}}</div>
    {{#if isGM}}
      <div class="stat-name-input {{#if (eq item.system.oppName '')}} input-border {{/if}} centre"><input name="system.oppName" type="text" value="{{item.system.oppName}}"/></div>
    {{else}}
      <div class="stat-name centre {{#if (eq item.system.oppName '')}} input-border {{/if}}">{{item.system.oppName}}</div>
    {{/if}}
    <br>
  </div>

  {{#if hasOwner}}
    <div class="item-trait-grid">
      <div class="stat-name left bold new-row">{{localize 'PEN.score'}}</div>
      <div class="stat-name indent bold new-row">{{localize 'PEN.baseVal'}}</div>
      <div class="stat-name-input  centre"><input name="system.value" type="text" value="{{item.system.value}}" data-dtype="Number"/></div>
      <div class="stat-name indent bold">{{localize 'PEN.religion'}}</div>
      <div class="stat-name-input  centre"><input name="system.religious" type="text" value="{{item.system.religious}}" data-dtype="Number"/></div>
      <div class="stat-name indent bold">{{localize 'PEN.winter'}}</div>
      <div class="stat-name-input  centre"><input name="system.winter" type="text" value="{{item.system.winter}}" data-dtype="Number"/></div>
      <div class="stat-name indent bold ">{{localize 'PEN.total'}}</div>
      <div class="stat-name centre bold">{{item.system.total}}</div>
      <br>
      <div class="stat-name left bold new-row">{{localize 'PEN.xpCheck'}}</div>
      <div class="stat-name left new-row">{{localize 'PEN.trait'}}</div>
      <div class="centre"><a class="item-control item-toggle large-icon" data-property = "XP" title="{{localize 'PEN.dblClickToggle'}}"><i class="{{#if item.system.XP}}fa-regular fa-square-check{{else}}fa-regular fa-square{{/if}}"></i></a></div>
      <div class="stat-name left">{{localize 'PEN.opposingTrait'}}</div>
      <div class="centre"><a class="item-control item-toggle large-icon" data-property = "oppXP" title="{{localize 'PEN.dblClickToggle'}}"><i class="{{#if item.system.oppXP}}fa-regular fa-square-check{{else}}fa-regular fa-square{{/if}}"></i></a></div>
    </div>
    <br>
    <div class="stat-name left bold">{{localize 'PEN.directed'}}</div>
    <div class="stat-name-input {{#if (eq item.system.directed '')}} input-border {{/if}}"><input name="system.directed" type="text" value="{{item.system.directed}}"/></div>
    {{/if}}
</section>