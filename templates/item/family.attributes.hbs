<section class="tab attributes {{tab.cssClass}}" data-group="primary" data-tab="attributes">

  <div class="item-trait-grid">
    <div class="stat-name left bold new-row">{{localize 'PEN.gender'}}</div>
    <div class="stat-name-input {{#if (eq item.system.gender '')}} input-border {{/if}} centre"><input name="system.gender" type="text" value="{{item.system.gender}}"/></div>
    <br>

    <div class="stat-name left bold new-row">{{localize 'PEN.born'}}</div>
    <div class="stat-name-input {{#if (eq item.system.born '')}} input-border {{/if}} centre"><input name="system.born" type="text" value="{{item.system.born}}" data-dtype="Number"/></div>

    <div class="stat-name left bold">{{localize 'PEN.died'}}</div>
    <div class="stat-name-input {{#if (eq item.system.died '')}} input-border {{/if}} centre"><input name="system.died" type="text" value="{{item.system.died}}" data-dtype="Number"/></div>
    <br>

    <div class="stat-name left bold new-row">{{localize 'PEN.glory'}}</div>
    <div class="stat-name-input {{#if (eq item.system.glory '')}} input-border {{/if}} centre"><input name="system.glory" type="text" value="{{item.system.glory}}" data-dtype="Number"/></div>
    <br>

    <div class="stat-name left bold new-row">{{localize 'PEN.blessedBirth'}}</div>
    <div class="centre"><a class="item-control item-toggle large-icon" data-property = "blessed" title="{{localize 'PEN.dblClickToggle'}}"><i class="{{#if item.system.blessed}}fa-regular fa-square-check{{else}}fa-regular fa-square{{/if}}"></i></a></div>

  </div>
  <br>
  <div class="item-trait-grid">
    <div class="stat-name left bold">{{localize 'PEN.person'}}</div>
    <div class="stat-name centre">
      <select data-handle-change name="system.relation">
        {{selectOptions relationType selected=item.system.relation}}
      </select>
      </div>
    {{#if (eq item.system.relation 'spouse')}}
    <br>
    <div class="stat-name left bold new-row">{{localize 'PEN.barrenMarriage'}}</div>
    <div class="centre"><a class="item-control item-toggle large-icon" data-property = "barrenMarriage" title="{{localize 'PEN.dblClickToggle'}}"><i class="{{#if item.system.barrenMarriage}}fa-regular fa-square-check{{else}}fa-regular fa-square{{/if}}"></i></a></div>
    {{/if}}
  </div>

</section>
